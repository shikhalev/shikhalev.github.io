[
  {%- assign comments = '' | split: ',' -%}
  {%- for cc in site.data.comments -%}
    {%- if cc[1] -%}
      {%- for ccc in cc[1] -%}
        {%- if ccc[1] -%}
          {%- assign comments = comments | push: ccc[1] -%}
        {%- endif -%}
      {%- endfor -%}
    {%- endif -%}
  {%- endfor -%}
  {%- assign comments = comments | sort: 'date' | reverse -%}
  {%- for comment in comments limit:site.comments_json_limit -%}
  {%- capture content -%}
    {%- include staticman/comment.liquid comment=comment expand=false -%}
  {%- endcapture -%}
  {"content": {{- content | jsonify -}}
   ,"slug": {{- comment.slug | jsonify -}}
   ,"comment_id": {{- comment.comment_id | jsonify -}}
   ,"parent_id": {{- comment.parent_id | jsonify -}}
  }{%- unless forloop.last -%},{%- endunless -%}
  {%- endfor -%}
  {%- comment -%}
  {%- if jekyll.environment != 'production' -%}
  ,{
    "content":"<div class=\"comment\" id=\"000000000\">\n  <h5 class=\"comment-title\"><span class=\"comment-author\"><a href=\"https://shikhalev.org\">Тестер</a></span> <span class=\"comment-meta\"><a href=\"#482099859\">#482099859</a>&nbsp;2021.03.14 16.47</span>\n  </h5>\n  <div class=\"comment-message\"><p>Лорем ипсум :)</p>\n\n<p>Так победим!</p>\n</div>\n</div>\n",
    "slug":"2021-03-start-html",
    "comment_id":"000000000",
    "parent_id":""
  }
  {%- endif -%}
  {%- endcomment -%}
]
