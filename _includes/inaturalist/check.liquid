{% assign inaturalist_show = false %}
{% if page.inaturalist %}
  {% assign inaturalist_show = true %}
{% elsif page.inaturalist == false %}
  {% assign inaturalist_show = false %}
{% else %}
  {% for category in page.categories %}
    {% assign category_page = site.streams | where: 'category_id', category | first %}
    {% if category_page.inaturalist %}
      {% assign inaturalist_show = true %}
    {% elsif category_page.inaturalist == false %}
      {% assign inaturalist_show = false %}
    {% endif %}
  {% endfor %}
{% endif %}
