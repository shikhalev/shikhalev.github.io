  <p class="post-meta">{{ item.date | date: date_format }} | Разделы: {% include list/categories.html item=item %}</p>
  <h3 class="post-item" id="{{ item.url | slugify }}">
    <a class="post-link" href="{{ item.url | relative_url }}">
      {{ item.title | escape }}
    </a>
  </h3>
  {% if site.show_excerpts %}
    {{ item.excerpt }}
    {% if item.content contains site.excerpt_separator %}
      <p class="small"><a href="{{ item.url | relative_url }}">Читать далее на <b>shikhalev.org</b> »</a></p>
    {% else %}
      <p class="small"><a href="{{ item.url | relative_url }}">Читать на <b>shikhalev.org</b> »</a></p>
    {% endif %}
  {% endif %}
  {% if item.tags and item.tags.size > 0 %}
    <p class="post-meta">Теги: {% include list/tags.html item=item %}</p>
  {% endif %}
  {% if item.comments != false %}
    {% assign slug = item.url | slugify %}
    <p class="post-meta">{%- include list/list_comments.liquid slug=slug url=item.url -%}</p>
  {% endif %}
